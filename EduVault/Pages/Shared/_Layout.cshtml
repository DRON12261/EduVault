        <div class="logo">EduVault</div>
        <div class="user-info">
            <span>Иван Петров</span>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
