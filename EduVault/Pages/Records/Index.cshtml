@page
@model EduVault.Pages.Records.IndexModel
@{
    ViewData["Title"] = "Справочник";
}

<div style="display: grid; grid-template-columns: 1fr auto; gap: 2rem; height: calc(100vh - 100px);">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ИД</th>
                    <th>Название</th>
                    <th>Тип файла</th>
                    <th>Дата создания</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="clickable-row" onclick="window.location.href='/Record?id=@item.Id'">
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.FileType</td>
                        <td>@item.CreationDate.ToString("dd.MM.yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="display: flex; flex-direction: column; gap: 2rem;">
        <div style="text-align: right;">
            <a asp-page="./CreateRecord" class="btn-primary" style="display: inline-block;">
                Создать карточку
            </a>
        </div>

        <div class="filter-panel">
            <h3>Фильтры</h3>
            <div class="form-group">
                <label>ИД:</label>
                <input type="number">
            </div>
            <div class="form-group">
                <label>Название:</label>
                <input type="text">
            </div>
            <div class="form-group">
                <label>Тип файла:</label>
                <select>
                    <option>Все</option>
                    <option>Тип файла 1</option>
                    <option>Тип файла 2</option>
                </select>
            </div>
            <button class="btn-primary" style="margin-top: auto;">Поиск</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function handleRowClick(id) {
            window.location.href = `/Record?id=${id}`;
        }
    </script>
}
