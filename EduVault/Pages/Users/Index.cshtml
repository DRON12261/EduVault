@model EduVault.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Список пользователей";
    ViewData["Entity"] = "User";
}

<div class="button-toolbar mb-3" style="display: flex; gap: 0.5rem; align-items: center;">
    <form method="post" asp-page="./@ViewData["Entity"]" asp-route-mode="create" style="display: inline-block; margin: 0;">
        @Html.AntiForgeryToken()
        <button id="createBtn" type="submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить
        </button>
    </form>
    <form id="editForm" method="post" asp-page="./@ViewData["Entity"]" asp-route-mode="edit" style="display: inline-block; margin: 0;">
        @Html.AntiForgeryToken()
        <button id="editBtn"  type="submit" class="btn btn-warning" disabled>
            <i class="bi bi-pencil-square"></i> Редактировать
        </button>
    </form>
    <form method="post" asp-page-handler="Delete" style="display: inline-block; margin: 0;">
        @Html.AntiForgeryToken()
        <input type="hidden" id="deleteId" name="id" />
        <button id="deleteBtn" type="submit" class="btn btn-danger" disabled>
            <i class="bi bi-trash"></i> Удалить
        </button>
    </form>
</div>
<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Логин</th>
            <th>Тип</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr class="clickable-row" data-id="@user.Id" onclick="selectRow(this, '@user.Id')">
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Login</td>
                <td>@user.UserType</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/rowSelection.js"></script>

    <style>
        .clickable-row {
            cursor: pointer;
        }

        .clickable-row:hover {
            background-color: #f8f9fa;
        }

        .table-active {
            background-color: #e9ecef !important;
        }
    </style>
}
