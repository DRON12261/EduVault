@page
@model EduVault.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Список пользователей";
}


<h1>Список пользователей</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Логин</th>
            <th>Тип</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Login</td>
                <td>@user.UserType</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить этого пользователя?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./CreateUser" class="btn btn-primary">Добавить пользователя</a>
