@model EduVault.DBClasses.User
@{
}

<h1>Добавить пользователя</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Login" class="control-label"></label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserType" class="control-label"></label>
        <select asp-for="UserType" class="form-control">
            <option value="1">Обычный пользователь</option>
            <option value="2">Администратор</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
